---
import Layout from "../layouts/Layout.astro";
import Header from "../components/widgets/Header.astro";
import Navbar from "../components/atoms/Navbar.astro";
import About from "../components/widgets/About.astro";
---

<Layout>
	<header class="flex h-screen flex-col items-center justify-center">
		<nav
			class="fixed bottom-0 z-20 w-full md:absolute md:bottom-auto md:top-0"
			data-aos="fade-in"
		>
			<Navbar />
		</nav>
		<Header />
	</header>

	<main>
		<div class="bg-[url('/section-bg.svg')] bg-cover bg-top py-80">
			<section
				class="max-w-7xl space-y-6 px-4 md:px-10 lg:px-12 xl:mx-auto"
				id="about"
				data-aos="fade-in"
			>
				<About />
			</section>
		</div>
	</main>
</Layout>

<script>
	import AOS from "aos";
	import "aos/dist/aos.css";
	AOS.init();
</script>
