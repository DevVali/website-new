---
import { Image } from "astro:assets";
const { title, description, labels, image } = Astro.props;
import ProjectLabel from "../shared/ProjectLabel.astro";

const projectImage = import(`../../assets/${image}.png`);
---

<div
	class="relative flex-[1_0_calc(100%_-12px)] overflow-hidden rounded-2xl border border-secondary transition-all duration-300 hover:scale-90 md:flex-[1_0_calc(50%_-12px)]"
>
	<Image
		src={projectImage}
		alt="Project image"
		class="absolute -z-10 h-full w-full rounded-2xl object-cover blur-sm brightness-50"
	/>
	<div class="space-y-6 p-6">
		<h3 class="text-2xl font-extrabold md:text-3xl">{title}</h3>
		<div class="flex flex-wrap gap-3">
			{labels.map((label: string) => <ProjectLabel title={label} />)}
		</div>
		<p>
			{description}
		</p>
	</div>
</div>
