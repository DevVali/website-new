<script>
	import { gsap } from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";

	gsap.registerPlugin(ScrollTrigger);

	// Defaults
	gsap.set(".about-heading", {
		perspective: 500,
		opacity: 0,
		filter: "blur(5px)",
		x: -100,
		y: 50,
	});
	gsap.set(".about-content", {
		perspective: 500,
		opacity: 0,
		filter: "blur(5px)",
		x: 100,
		y: 50,
	});

	// Timeline
	const tl = gsap.timeline({
		scrollTrigger: {
			trigger: ".about-heading",
			start: "bottom center",
			end: "+=600",
			scrub: 2,
			pin: "#about",
		},
		defaults: {
			opacity: 1,
			filter: "blur(0px)",
			x: 0,
			y: 0,
		},
	});
	tl.to(".about-heading", {}).to(".about-content", {});
</script>
