<script>
	import { gsap } from "gsap";

	import { ScrollTrigger } from "gsap/ScrollTrigger";
	import { ScrollToPlugin } from "gsap/ScrollToPlugin";

	gsap.registerPlugin(ScrollTrigger, ScrollToPlugin);

	// Defaults
	gsap.set(".about-heading", {
		opacity: 0,
		y: -100,
	});
	gsap.set(".about-content", {
		opacity: 0,
		y: 100,
	});

	// Animation
	const tl = gsap.timeline({
		scrollTrigger: {
			trigger: "#about",
			start: "center center",
			end: "+=600",
			scrub: true,
			pin: true,
		},
		defaults: {
			opacity: 1,
			y: 0,
		},
	});
	tl.to(".about-heading", {}).to(".about-content", {}, "<");

	document.querySelectorAll<HTMLElement>(".scroll-to-about").forEach((e) => {
		e.addEventListener("click", () => {
			gsap.to(window, {
				duration: 2,
				scrollTo: tl.scrollTrigger!.end,
				ease: "power1.in",
			});
		});
	});
</script>
