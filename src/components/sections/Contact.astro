	>
</div>

<script>
	const icons = document.querySelectorAll<HTMLElement>(".animated-icon");

	icons.forEach((icon, index) => {
		icon.addEventListener("mouseover", () => {
			icon.style.transform = "scale(1.5) translateY(-8px)";

			if (icons[index + 1] !== undefined) {
				icons[index + 1].style.transform = "scale(1.2) translateY(-6px)";
			}
			if (icons[index + 2] !== undefined) {
				icons[index + 2].style.transform = "scale(1.1) translateY(-2px)";
			}

			if (icons[index - 1] !== undefined) {
				icons[index - 1].style.transform = "scale(1.2) translateY(-6px)";
			}
			if (icons[index - 2] !== undefined) {
				icons[index - 2].style.transform = "scale(1.1) translateY(-2px)";
			}
		});

		icon.addEventListener("mouseleave", () => {
			icons.forEach((icon) => {
				icon.style.transform = "scale(1) translateY(0px)";
			});
		});
	});
</script>
